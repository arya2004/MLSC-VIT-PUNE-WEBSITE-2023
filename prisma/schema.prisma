// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}


model User {
  id      Int      @id @default(autoincrement())
  fullName    String?
  domain String
  position String
  year Int
  xLink String
  linkedinLink String
  githubLink String
  aboutMe String?
  imageLink String
  role    Role     @default(TEAM_MEMBER)
  projects Project[]
  blogs Blog[]
  events Event[]  
}


model Blog {
  id         Int        @id @default(autoincrement())
  title      String
  published  Boolean    @default(false)
  link      String?
  description   String
  imageUrl  String
  domain   String
  authors    User[]
}

model Project {
  id         Int        @id @default(autoincrement())
  title      String
  gitUrl     String
  imageLink       String?
  description String
  maintainer     User       @relation(fields: [maintainerId], references: [id])
  maintainerId   Int


}

model Event {
  id    Int    @id @default(autoincrement())
  name  String
  tagline String
  date  DateTime
  description String
  footfall String
  eventSpan Int
  link String
  organisingPeople User[]
}

enum Role {
  TEAM_MEMBER
  ADMIN
}